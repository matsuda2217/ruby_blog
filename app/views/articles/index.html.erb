<h1 align="center">Listing all articles</h1>
    <% @articles.each do |a| %>
        <div class="row">
            <div class="col-xs-8 col-xs-offset-2">
                <div class="well well-lg">
                    <div class="article-title">        
                        <%= link_to a.title, article_path(a) %>
                    </div>
                    <div class="article-description">
                        <%= truncate(a.description, length: 130) %>
                        <div class="article-meta-details">
                            <small> 
                                Created by : <%= a.user.username if a.user %>,
                                <%= time_ago_in_words(a.created_at) %> ago,
                                last updated: <%= time_ago_in_words(a.updated_at) %> ago
                            </small>
                        </div>
                    </div>
                    <div class="article-actions">
                        <div class="button-actions">
                        <%= link_to "Edit article", article_path(a), class: "btn btn-xs btn-primary" %>
                        <%= link_to "Delete this article", article_path(a), 
                                                            class: "btn btn-xs btn-danger",
                                                            method: :delete,
                                                            data: {confirm: "Are you sure, you want to delete this article"} %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% end %>