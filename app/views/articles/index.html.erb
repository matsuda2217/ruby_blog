<h1>Listing all articles</h1>
<p>
    <%= link_to "Create new article", new_article_path %>
</p>
<table>
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    <% @articles.each do |a| %>
    <tr>
        <td><%= a.id %></td>        
        <td><%= a.title %></td>
        <td><%= a.description %></td>
        <td>
            <%= link_to "Edit", edit_article_path(a) %> |
            <%= link_to "Show", article_path(a) %> |
            <%= link_to "Delete", article_path(a), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
    </tr>
    <% end %>
</table>