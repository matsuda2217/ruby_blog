<h1 align="center"> All users </h1>

<div align="center">
    <%= will_paginate %>
</div>
<div align="center">
<%= @users.each do |u| %>
    <ul class="listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li>
                    <%= link_to gravatar_image(u), user_path(u) %>
                </li>
                <li>
                    <%= link_to u.username, user_path(u) %>
                </li>
                <li>
                    <small> <%= pluralize(u.articles.count, "article") if u.articles %> </small>
                </li>
            </div>
        </div>
    </ul>
<% end %>
</div>
<div align="center">
    <%= will_paginate %>
</div>